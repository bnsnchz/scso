# Environment Configuration Example
# Copy this file to .env.local for local development
# Copy to .env.production for production builds

# Base path for deployment (empty for root, or /subdirectory for subdirectory deployment)
VITE_BASE_PATH=/scso

# API Configuration
VITE_API_BASE_URL=https://api.scso.org

# Analytics Configuration
VITE_ANALYTICS_ENABLED=true
VITE_GA_ID=GA-XXXXXXXXX
VITE_GTM_ID=GTM-XXXXXXX

# Feature Flags
VITE_ENABLE_NEWSLETTER=true
VITE_ENABLE_SOCIAL_SHARING=true
VITE_ENABLE_PWA=false

# App Information
VITE_APP_VERSION=1.0.0
